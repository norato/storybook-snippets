{
  "Angular Story: init": {
    "prefix": "ng-story",
    "description": "Initialize a story for a Angular Component",
    "types": "typescript",
    "body": [
      "import { storiesOf } from '@storybook/angular';",
      "",
      "storiesOf('${1:module} | ${2:component}', module)",
      "\t.add('${3:story name}', () => ({",
      "\ttemplate: ``",
      "}));"
    ]
  },
  "Angular Story: init with dependency injection": {
    "prefix": "ng-story-module",
    "description": "Initialize a story for a Angular Component with dependency injection",
    "types": "typescript",
    "body": [
      "import { storiesOf, moduleMetadata } from '@storybook/angular';",
      "",
      "const metadata = moduleMetadata({});",
      "",
      "storiesOf('${1:module} | ${2:component}', module)",
      "\t.addDecorator(metadata)",
      "\t.add('${3:story name}', () => ({",
      "\t\ttemplate: ``,",
      "\t\tprops: {}",
      "}));"
    ]
  },
  "Angular Story: add story": {
    "prefix": "ng-add-story",
    "description": "Add Storybook Story",
    "types": "typescript",
    "body": [
      "\t.add('${1:story name}', () => ({",
      "\t\ttemplate: ``,",
      "\t\tprops: {}",
      "}));"
    ]
  }
}
